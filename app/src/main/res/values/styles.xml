        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:backgroundTint">@color/bakkerBartPink</item> <!-- Reference to global color -->
        <item name="android:textColor">#FFFFFF</item> <!-- Inline color for button text -->
