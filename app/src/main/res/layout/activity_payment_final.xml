<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="16dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/stepDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif_regular"
                android:text="Stap 3/3: Afronding"
                android:textColor="@color/bakkerBartPink" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif_regular"
                android:gravity="start"
                android:paddingTop="20dp"
                android:paddingBottom="8dp"
                android:text="Betalingsinformatie"
                android:textColor="@color/bakkerBartPink"
                android:textSize="28sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persoonlijke Gegevens"
                android:textColor="@color/bakkerBartPink"
                android:textSize="20sp"
                android:paddingTop="12dp"
                android:fontFamily="@font/bree_serif_regular" />


            <EditText
                android:id="@+id/firstNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Voornaam"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bree_serif_regular"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="12dp" />


            <EditText
                android:id="@+id/lastNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Achternaam"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bree_serif_regular"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="12dp" />


            <EditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Telefoonnummer"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bree_serif_regular"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="12dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Betalingsmethode"
                android:textColor="@color/bakkerBartPink"
                android:textSize="20sp"
                android:paddingTop="12dp"
                android:fontFamily="@font/bree_serif_regular" />


            <Spinner
                android:id="@+id/paymentTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="12dp" />


            <EditText
                android:id="@+id/paymentMethodInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Betaling Gegevens"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bree_serif_regular"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="12dp" />


            <Spinner
                android:id="@+id/idealBankSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:visibility="gone"
                android:layout_marginTop="12dp" />


            <TextView
                android:id="@+id/paymentAmountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Totaal Bedrag: â‚¬ 0.00"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bree_serif_regular" />


            <Button
                android:id="@+id/payButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/bakkerBartPink"
                android:fontFamily="@font/bree_serif_regular"
                android:padding="12dp"
                android:text="Afrekenen"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
