<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">


    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bestelling Geplaatst!"
                android:fontFamily="@font/bree_serif_regular"

                android:textColor="@color/bakkerBartPink"
                android:textSize="28sp"
                android:textStyle="bold"
                android:paddingTop="50dp"
                android:gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uw bestelling is succesvol geplaatst. Klik op de knop om terug naar de homepagina te gaan."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:fontFamily="@font/bree_serif_regular"

                android:layout_marginTop="16dp"
                android:gravity="center"/>


            <Button
                android:id="@+id/backToHomeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terug naar Home"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/bakkerBartPink"
                android:layout_marginTop="32dp"
                android:padding="12dp"
                android:fontFamily="@font/bree_serif_regular"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
